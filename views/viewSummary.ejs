<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>View Summary</title>
    <link rel="stylesheet" href="/styles.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        background-color: #f7f9fc;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
      }
      h1 {
        margin-bottom: 20px;
        font-size: 24px;
        color: #333;
        text-align: center;
      }
      table {
        width: 100%;
        max-width: 900px;
        border-collapse: collapse;
        background-color: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
      }
      th,
      td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ccc;
      }
      th {
        background-color: #007bff;
        color: white;
      }
      tbody tr:nth-child(even) {
        background-color: #f7f9fc;
      }
      @media (max-width: 600px) {
        th,
        td {
          font-size: 14px;
        }
        table {
          width: 100%;
        }
        th,
        td {
          padding: 8px;
        }
      }
      @media (max-width: 400px) {
        h1 {
          font-size: 20px;
        }
        th,
        td {
          font-size: 12px;
        }
      }
    </style>
  </head>
  <body>
    <h1>
      Proposed Solution Summary for Company: <%= companyName %> and Case: <%=
      caseName %>
    </h1>

    <h2>Capex Items</h2>
    <% if (capex.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Rate</th>
          <th>Quantity</th>
          <th>Year 1</th>
          <th>Year 2</th>
          <th>Year 3</th>
          <th>Year 4</th>
          <th>Year 5</th>
        </tr>
      </thead>
      <tbody>
        <% capex.forEach(function(item) { %>
        <tr>
          <td><%= item.item %></td>
          <td><%= Number(item.rate).toLocaleString() %></td>
          <td><%= Number(item.quantity).toLocaleString() %></td>
          <td><%= (item.rate * item.quantity).toLocaleString() %></td>
          <td>0</td>
          <td>0</td>
          <td>0</td>
          <td>0</td>
        </tr>
        <% }); %>
        <tr>
          <td>Capex Total</td>
          <td></td>
          <td></td>
          <td><%= capexTotal.year1.toLocaleString() %></td>
          <td><%= capexTotal.year2.toLocaleString() %></td>
          <td><%= capexTotal.year3.toLocaleString() %></td>
          <td><%= capexTotal.year4.toLocaleString() %></td>
          <td><%= capexTotal.year5.toLocaleString() %></td>
        </tr>
      </tbody>
    </table>
    <% } %>

    <h2>Opex Items</h2>
    <% if (opex.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Rate</th>
          <th>Quantity</th>
          <th>Payment Year</th>
          <th>Year 1</th>
          <th>Year 2</th>
          <th>Year 3</th>
          <th>Year 4</th>
          <th>Year 5</th>
        </tr>
      </thead>
      <tbody>
        <% opex.forEach(function(item) { %>
        <tr>
          <td><%= item.item %></td>
          <td><%= Number(item.rate).toLocaleString() %></td>
          <td><%= Number(item.quantity).toLocaleString() %></td>
          <td><%= item.payment_year %></td>
          <td><%= item.year1.toLocaleString() %></td>
          <td><%= item.year2.toLocaleString() %></td>
          <td><%= item.year3.toLocaleString() %></td>
          <td><%= item.year4.toLocaleString() %></td>
          <td><%= item.year5.toLocaleString() %></td>
        </tr>
        <% }); %>
        <tr>
          <td>Opex Total</td>
          <td></td>
          <td></td>
          <td></td>
          <td><%= opexTotal.year1.toLocaleString() %></td>
          <td><%= opexTotal.year2.toLocaleString() %></td>
          <td><%= opexTotal.year3.toLocaleString() %></td>
          <td><%= opexTotal.year4.toLocaleString() %></td>
          <td><%= opexTotal.year5.toLocaleString() %></td>
        </tr>
      </tbody>
    </table>
    <% } %>

    <h2>Capex + Opex</h2>
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Rate</th>
          <th>Quantity</th>
          <th>Year 1</th>
          <th>Year 2</th>
          <th>Year 3</th>
          <th>Year 4</th>
          <th>Year 5</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Capex + Opex</td>
          <td></td>
          <td></td>
          <td><%= (capexTotal.year1 + opexTotal.year1).toLocaleString() %></td>
          <td><%= (capexTotal.year2 + opexTotal.year2).toLocaleString() %></td>
          <td><%= (capexTotal.year3 + opexTotal.year3).toLocaleString() %></td>
          <td><%= (capexTotal.year4 + opexTotal.year4).toLocaleString() %></td>
          <td><%= (capexTotal.year5 + opexTotal.year5).toLocaleString() %></td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
